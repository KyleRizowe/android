<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuel4media.carrythistoo.fragments.CompareStateLawsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/state_laws"
                layout="@layout/compare_state_laws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_laws"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_laws"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/state_laws"
                    android:fontFamily="@font/houschka_pro_demibold"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/law_detail"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_permit_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_laws"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/progress_bar_small" />

</RelativeLayout>
