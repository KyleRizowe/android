<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="listPreferredItemHeightSmall">38dp</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextBlack</item>

        <item name="textColorAlertDialogListItem">@color/colorPrimary</item>
    </style>

    <style name="Theme.SwitchDateTime" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>